    <div class="container-fluid">
        <div class="d-flex justify-content-between">
            <div class="mb-5">
<!--                <h1 class="display-3 fw-bold mb-4 text-white">{{city}}</h1>-->
                <h3 class="text-white">{{celsia weather.main.temp}}</h3>
                <h4 class="text-white">{{weather.weather.0.main}}/{{weather.weather.0.description}}</h4>

                <h5 class="text-white mt-3">feels like {{celsia weather.main.feels_like}}</h5>
            </div>
            <div>
                <img src="https://openweathermap.org/img/wn/{{weather.weather.0.icon}}@2x.png" alt="weather-icon">
            </div>
        </div>

        <div class="row gx-3 gy-3">
            <div class="col-6">
                <div class="rounded-4 bg-body-turtiquose p-3">
                    <div class="text-light-turtiquose fs-6">
                        <i class="bi bi-droplet"></i>
                        humidity
                    </div>
                    <div class="text-white fs-3">
                        {{weather.main.humidity}}%
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="rounded-4 bg-body-turtiquose p-3">
                    <div class="text-light-turtiquose fs-6">
                        <i class="bi bi-eye"></i>
                        visibility
                    </div>
                    <div class="text-white fs-3">
                        {{distance weather.visibility}}
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="rounded-4 bg-body-turtiquose p-3">
                    <div class="text-light-turtiquose fs-6">
                        <i class="bi bi-arrows-angle-contract"></i>
                        pressure
                    </div>
                    <div class="text-white fs-3">
                        {{weather.main.pressure}}
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="rounded-4 bg-body-turtiquose p-3">
                    <div class="text-light-turtiquose fs-6">
                        <i class="bi bi-wind"></i>
                        wind speed
                    </div>
                    <div class="text-white fs-3">
                        {{weather.wind.speed}} meters/second
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="rounded-4 bg-body-turtiquose p-3">
                    <div class="text-light-turtiquose fs-6">
                        <i class="bi bi-brightness-alt-high"></i>
                        sunrise time
                    </div>
                    <div class="text-white fs-3">
                        {{time weather.sys.sunrise 0}}
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="rounded-4 bg-body-turtiquose p-3">
                    <div class="text-light-turtiquose fs-6">
                        <i class="bi bi-brightness-alt-high-fill"></i>
                        sunset time
                    </div>
                    <div class="text-white fs-3">
                        {{time weather.sys.sunset 0}}
                    </div>
                </div>
            </div>
        </div>
    </div>
